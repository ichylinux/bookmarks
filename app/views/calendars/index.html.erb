<div class="actions">
  <%= link_to '追加', new_calendar_path %>
</div>

<table>
  <tr>
    <th><%= Calendar.human_attribute_name :title %></th>
    <th colspan="2"></th>
  </tr>
  
  <% @calendars.each do |c| %>
    <tr>
      <td><%= c.title %></td>
      <td>
        <%= link_to '編集', edit_calendar_path(c) %>
      </td>
      <td>
        <%= link_to '削除', calendar_path(c), :method => 'delete', :confirm => t('messages.confirm_delete', :name => c.title) %>
      </td>
    </tr>
  <% end %>
</table>
