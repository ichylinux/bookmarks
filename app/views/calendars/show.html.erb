    <th><%= Calendar.human_attribute_name :user_id %></th>
    <td><%= @calendar.user_id %></td>
  </tr>
  <tr>
    <th><%= Calendar.human_attribute_name :title %></th>
    <td><%= @calendar.title %></td>
  </tr>
  <tr>
    <th><%= Calendar.human_attribute_name :deleted %></th>
    <td><%= @calendar.deleted %></td>
  </tr>
  <tr>
    <th><%= Calendar.human_attribute_name :created_at %></th>
    <td><%= @calendar.created_at %></td>
  </tr>
  <tr>
    <th><%= Calendar.human_attribute_name :updated_at %></th>
