<div class="actions">
  <%= link_to '編集', edit_calendar_path(@calendar) %>
  <%= link_to '削除', calendar_path(@calendar), :method => 'delete', :confirm => t('messages.confirm_delete', :name => @calendar.title) %>
</div>

<table>
  <tr>
    <th><%= Calendar.human_attribute_name :title %></th>
    <td><%= @calendar.title %></td>
  </tr>
  <tr>
    <th><%= Calendar.human_attribute_name :show_weather %></th>
    <td><%= @calendar.show_weather? ? 'する' : 'しない' %></td>
  </tr>
</table>
