<%= form_for @feed do |f| %>
  <table>
    <tr>
      <th><%= f.label :url %></th>
      <td><%= f.text_field :url, :class => 'url' %></td>
    </tr>
    <tr>
      <th><%= f.label :auth_user %></th>
      <td><%= f.text_field :auth_user %></td>
    </tr>
    <tr>
      <th><%= f.label :auth_password %></th>
      <td><%= f.password_field :auth_password %></td>
    </tr>
    <tr>
      <th><%= f.label :auth_url %></th>
      <td><%= f.text_field :auth_url %></td>
    </tr>
    <tr>
      <th><%= f.label :title %></th>
      <td>
        <%= f.text_field :title %>
        <%= f.button 'フィードから取得', :onclick => 'feeds.get_feed_title(this); return false;', :'data-url' => url_for(:action => 'get_feed_title') %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :display_count %></th>
      <td><%= f.number_field :display_count, :class => 'display_count' %></td>
    </tr>
    <tr>
      <td colspan="2"><%= f.submit %></td>
    </tr>
  </table>
<% end %>
