<%= form_for @preference, :html => {:class => 'preference'} do |f| %>
  <table>
    <tr>
      <th><%= f.label :theme %></th>
      <td><%= f.select :theme, {'シンプル' => 'simple'}, :include_blank => true %></td>
    </tr>
    <tr>
      <th><%= f.label :use_todo %></th>
      <th><%= f.check_box :use_todo %></th>
    </tr>
    <tr>
      <th><%= f.label :use_two_factor_authentication %></th>
      <th><%= f.check_box :use_two_factor_authentication %></th>
    </tr>
  </table>
  
  <%= f.submit '保存' %>
<% end %>
