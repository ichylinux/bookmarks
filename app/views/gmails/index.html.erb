<div class="actions">
  <%= link_to '追加', new_gmail_path %>
</div>

<% unless @gmails.present? %>
  <div>1件も登録されていません。</div>
<% else %>
  <table>
    <tr>
      <th>タイトル</th>
      <th>ラベル</th>
      <th>表示メッセージ数</th>
      <th colspan="2"></th>
    </tr>
    
    <% @gmails.each do |g| %>
      <tr>
        <td><%= g.title %></td>
        <td><%= g.labels %></td>
        <td><%= g.display_count %></td>
        <td><%= link_to '編集', edit_gmail_path(g) %></td>
        <td><%= link_to '削除', gmail_path(g), method: 'delete', confirm: t('messages.confirm_delete', name: g.title) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
