<div class="header">
  <script>
    function toggle_menu() {
      $('.header .menu').toggleClass('hidden');
    }

    $(document).ready(function() {
      var header = $('.header').first();
      var email = header.find('.email').first();
      var menu = header.find('.menu').first();

      menu.css('min-width', menu.outerWidth());
      menu.css('top', header.offset().top + header.height());
      menu.css('left', header.offset().left + header.outerWidth() - menu.outerWidth());

      menu.find('a').click(function() {
        if ($(this).attr('target') == '_blank') {
          toggle_menu();
        }
      });
    });
  </script>
  <div>
    <ul class="navigation">
      <li><%= link_to 'Home', root_path %></li>
      <li class="email"><a href="" onclick="toggle_menu(); return false;"><%= current_user.email %></a></li>
    </ul>
  </div>
  <div class="menu hidden">
    <div><%= link_to '設定', preferences_path %></div>
    <div><%= link_to 'ブックマーク', bookmarks_path %></div>
    <div><%= link_to 'タスク', todos_path %></div>
    <div><%= link_to 'カレンダー', calendars_path %></div>
    <div><%= link_to 'フィード', feeds_path %></div>

    <% if current_user.admin? %>
      <div><%= link_to 'ジョブ', resque_path, :target => '_blank' %></div>
    <% end %>

    <div><%= link_to 'ログアウト', destroy_user_session_path, :method => 'delete' %></div>
  </div>
</div>
