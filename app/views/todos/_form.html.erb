<%= form_for @todo do |f| %>
  <table>
    <tr>
      <td>
        <%= f.select :priority, Todo::PRIORITIES.invert %>
      </td>
      <td>
        <%= f.text_field :title %>
      </td>
      <td>
        <%= f.submit '更新', :onclick => 'todos.update_todo(this); return false;' %>
      </td>
    </tr>
  </table>
<% end %>
